<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>com.guicedee.services</groupId>
        <artifactId>services-parent</artifactId>
        <version>0.0.0_0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>primefaces</artifactId>
    <name>primefaces</name>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <artifactSet>
                        <includes>
                            <include>com.github.primefaces:primefaces</include>
                            <include>org.primefaces:primefaces:*</include>
                            <include>com.rometools:rome:*</include>
                            <include>com.rometools:rome-utils:*</include>
                            <include>net.sf.barcode4j:barcode4j-light:*</include>
                            <include>org.owasp.encoder:encoder:*</include>
                            <include>org.owasp.esapi:esapi:*</include>
                            <include>net.glxn:qrgen:*</include>
                            <include>org.jdom:jdom2:*</include>
                            <include>com.google.zxing:*</include>
                            <include>com.googlecode.owasp-java-html-sanitizer:owasp-java-html-sanitizer:*</include>
                        </includes>
                    </artifactSet>
                    <filters>
                        <filter>
                            <artifact>*:*</artifact>
                            <excludes>
                                <exclude>module-info.java</exclude>
                                <exclude>*.jar</exclude>
                            </excludes>
                        </filter>
                    </filters>
                    <relocations>
                        <relocation>
                            <pattern>com.rometools</pattern>
                            <shadedPattern>com.guicedee.services.primefaces.rometools</shadedPattern>
                        </relocation>
                    </relocations>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.moditect</groupId>
                <artifactId>moditect-maven-plugin</artifactId>
            </plugin>

        </plugins>
    </build>

	<profiles>
		<profile>
			<id>jdk8</id>
			<repositories>
				<repository>
					<id>OSS Snapshots</id>
					<url>https://oss.sonatype.org/content/repositories/snapshots/</url>
				</repository>
				<repository>
					<id>jitpack.io</id>
					<url>https://jitpack.io</url>
				</repository>
			</repositories>
		</profile>
		<profile>
			<id>jdk9</id>
			<repositories>
				<repository>
					<id>OSS Snapshots</id>
					<url>https://oss.sonatype.org/content/repositories/snapshots/</url>
				</repository>
				<repository>
					<id>jitpack.io</id>
					<url>https://jitpack.io</url>
				</repository>
			</repositories>
		</profile>
	</profiles>

    <dependencies>

